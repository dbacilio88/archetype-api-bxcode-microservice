#set( $dollar = '$' )
<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <Properties>
        <Property name="LOG_FILE_NAME">${dollar}{env:FILE_NAME:-${artifactId}}</Property>
        <Property name="LOG_FOLDER">${dollar}{env:APP_LOG_ROOT:-/logs}</Property>

        <Property name="LOG_PATTERN_CONSOLE">%blue{%d}|%magenta{%X{requestId}}|%magenta{%X{tenantId}}|%magenta{%t}|%highlight{%-5p}|%cyan{${artifactId}}|%X{method}|%cyan{%-33.33c{1} #%L:} %highlight{%m}%n</Property>
        <Property name="LOG_PATTERN_FILE">%d|%X{requestId}|%X{tenantId}|%magenta{%t}|%p|${artifactId}|%X{method}|%c{1} #%L: %m%n</Property>
    </Properties>

    <Appenders>

        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${dollar}{LOG_PATTERN_CONSOLE}"/>
        </Console>

        <RollingFile name="fileApiLog" fileName="${dollar}{LOG_FOLDER}/${dollar}{LOG_FILE_NAME}.log"
                     filePattern="${dollar}{LOG_FOLDER}/${dollar}{LOG_FILE_NAME}-debug-backup-%d{yyyy-MM-dd}-%i.log">
            <LevelRangeFilter minLevel="FATAL" maxLevel="TRACE" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${dollar}{LOG_PATTERN_FILE}"/>

            <Policies>
                <SizeBasedTriggeringPolicy size="4MB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>

        <Async name="Async">
            <AppenderRef ref="fileApiLog"/>
        </Async>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="console"/>
            <AppenderRef ref="Async"/>
        </Root>
    </Loggers>
</Configuration>